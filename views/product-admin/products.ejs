<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Document</title>
    <link rel="stylesheet" href="../css/style.css">
    
    
</head>

<body>

    <%- include('../partials/header'); %>
    <!-- navabr -->
    <a style="margin: 10px 30px;padding: 15px 30px;font-size: larger;" href="/admin/new" class="btn btn-success">New</a>

    <h1 style="text-align:center;">Products</h1>

   
    <div class="productwrap"  style="margin:7vh 0px">

        <% Products.forEach(function(product){ %>
                  
                <div class="cards">
                    <img src="data:image/<%= product.image.contentType%>;base64,
                    <%=product.image.data.toString('base64')%>">
                     <div class="cardContent" >
                        <div class="caption"  >
                            <h4><%= product.name %></h4>
                        </div>
                        <div >
                            <h4><%= product.price %></h4>
                        </div>
                    <div class="cardbtn" >
                        
                        <a href="/admin/<%=product._id%>"  style="text-decoration: none; font-size:larger;"class="btn btn-primary">More Info</a>
                        
                    </div>
                     </div>
                     
                </div>
                <% }); %>      
               
        
            </div>
 

    <!-- footer -->
    <%- include('../partials/footer'); %>
    <script src="../css/index.js"></script>
</body>

</html>