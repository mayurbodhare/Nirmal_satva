    <div class="p-3" >
      <section>
        <div class="container" style="background-color: whitesmokes;width: 100%;">
          <h2 class="display-4 text-center mt-4"><%= Product.name %></h2>
          <div class="showWrap"  style="  width: 100%;" >
            <div class="showImage" >
              <img
                style="margin: 0px auto; width: 100%;object-fit: cover;height: 70vh;"
